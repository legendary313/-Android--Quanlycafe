<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listnv_item_TenNV"
                android:textColor="#131F63"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="tên nhân viên"
                android:textSize="30dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/listnv_item_loaiNV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Loại NV"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/listnv_item_luongNV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:hint="Luong NV"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>
        <ImageView
            android:id="@+id/nut_suaxoa_nv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_menu"/>
        </FrameLayout>

</RelativeLayout>