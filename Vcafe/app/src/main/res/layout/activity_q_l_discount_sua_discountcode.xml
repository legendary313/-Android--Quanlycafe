<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".QLDiscount_sua_discountcode">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:text="Sửa Thông Tin DiscountCode"
        android:textStyle="bold"
        android:textColor="#131F63"
        android:textSize="24sp"/>

    <EditText
        android:id="@+id/sua_discountcode_tien_giam"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_centerHorizontal="true"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:maxLines="1"
        android:hint="Tiền giảm" />

    <EditText
        android:id="@+id/sua_discountcode_phantram_giam"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_centerHorizontal="true"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:maxLines="1"
        android:hint="Phan tram giảm" />

    <EditText
        android:id="@+id/sua_discountcode_code"
        android:layout_width="235dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:layout_centerHorizontal="true"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:maxLines="1"
        android:hint="code" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/them_ten_ban"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/nut_xac_nhan_sua_discountcode"
            android:background="?android:attr/selectableItemBackground"
            android:drawableLeft="@drawable/check"
            android:drawablePadding="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:text="Sửa" />
    </LinearLayout>
</LinearLayout>